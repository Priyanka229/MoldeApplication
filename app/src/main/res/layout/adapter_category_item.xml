<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="@dimen/category_screen_padding_top"
    android:paddingBottom="@dimen/category_screen_padding_bottom">

    <LinearLayout
        android:id="@+id/undone_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/category_item_done_undone_size"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/grey_69">

        <TextView
            android:id="@+id/undone_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/category_title_margin_left"
            android:layout_marginEnd="@dimen/category_title_margin_right"
            android:textColor="@android:color/white"
            android:textSize="@dimen/category_title_text_size"
            android:text="Pending"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/done_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/category_item_done_undone_size"
        android:orientation="horizontal"
        android:gravity="right|center_vertical"
        android:background="@color/colorAccent">

        <TextView
            android:id="@+id/done_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/category_title_margin_left"
            android:layout_marginEnd="@dimen/category_title_margin_right"
            android:textColor="@android:color/white"
            android:textSize="@dimen/category_title_text_size"
            android:text="Done"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/category_item_done_undone_size"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.example.noone.moldeapplication.widgets.CircularImageView
            android:id="@+id/image_iv"
            android:layout_width="@dimen/category_item_image_size"
            android:layout_height="@dimen/category_item_image_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/category_title_margin_left"
                android:layout_marginEnd="@dimen/category_title_margin_right"
                android:textColor="@color/black"
                android:textSize="@dimen/category_title_text_size"
                android:text="SAVE"/>

            <TextView
                android:id="@+id/sub_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/category_sub_title_margin_top"
                android:layout_marginStart="@dimen/category_sub_title_margin_left"
                android:layout_marginEnd="@dimen/category_sub_title_margin_right"
                android:textColor="@color/grey_69"
                android:textSize="@dimen/category_sub_title_text_size"
                android:text="SAVE"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>